{% extends 'base.html.twig' %}

{% block title %}Ancien élève{% endblock %}

{% block body %}
<section class="main-banner" id="top">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 align-self-center">
            <div class="header-text">
                <h4>Liste des anciens élèves</h4>
                {% for user in users %}
                {% if user.ancien %}
                Nom de l'élève = {{ user.name }}
                Email = {{ user.email }}
                Adresse ={{ user.adresse }}
                {% endif %}
                <br>
                {% endfor %}
            </div>
        </div>
    </div>
</section>
{% endblock %}